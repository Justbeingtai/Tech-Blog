<main>
  <h1>Welcome to the Tech Blog</h1>
  {{#each blogs}}
    <div class="blog-post">
      <h2><a href="/blog/{{id}}">{{title}}</a></h2>
      <p>by {{user.username}} on {{createdAt}}</p>
      <p>{{content}}</p>
    </div>
  {{else}}
    <p>No blog posts yet. Be the first to create one!</p>
  {{/each}}
</main>
