<main class="main-content text-center">
  <h1 class="display-4 mb-5 text-white">Welcome to the Tech Blog</h1>
  <div class="row">
    <div class="col-12">
      {{#each blogs}}
        <div class="card mb-4 shadow" style="border-radius: 15px;">
          <div class="card-body">
            <!-- Title Box with Dark Background -->
            <div class="title-box">
              <h2 class="card-title"><a href="/blog/{{id}}" class="text-white">{{title}}</a></h2>
            </div>
            <p class="card-subtitle text-muted mb-3">by {{user.username}} on {{createdAt}}</p>
            <p class="card-text">{{content}}</p>
            <a href="/blog/{{id}}" class="btn btn-outline-primary mt-3">Read More</a>
          </div>
        </div>
      {{else}}
        <p>No blog posts yet. Be the first to create one!</p>
      {{/each}}
    </div>
  </div>
</main>
