<main class="main-content">
  <h1>{{blog.title}}</h1>
  <p class="text-muted">by {{blog.user.username}} on {{blog.createdAt}}</p>
  <p>{{blog.content}}</p>

  <!-- Comments Section -->
  <section class="mt-4">
    <h2>Comments</h2>
    {{#if blog.comments.length}}
      {{#each blog.comments}}
        <div class="comment my-2 p-2 border rounded">
          <p><strong>{{user.username}}</strong> said:</p>
          <p>{{comment_text}}</p>
          <p class="text-muted"><small>Posted on {{createdAt}}</small></p>
        </div>
      {{/each}}
    {{else}}
      <p>No comments yet. Be the first to comment!</p>
    {{/if}}
  </section>

  <!-- Add Comment Form -->
  {{#if logged_in}}
    <form id="comment-form" class="mt-4">
      <div class="form-group">
        <label for="comment">Add a Comment:</label>
        <textarea id="comment" name="comment" class="form-control" rows="3" required></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Submit Comment</button>
    </form>
  {{else}}
    <p><a href="/login">Log in</a> to comment on this post.</p>
  {{/if}}
</main>

<!-- Comment Script -->
<script src="/js/comment.js"></script>
